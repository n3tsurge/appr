# =============================================================================
# AppR â€” Environment Variable Reference
# Copy this file to .env and fill in real values before running the stack.
# NEVER commit .env to version control.
# =============================================================================

# ---------------------------------------------------------------------------
# Database
# ---------------------------------------------------------------------------
POSTGRES_PASSWORD=changeme

# ---------------------------------------------------------------------------
# Cache / message broker
# ---------------------------------------------------------------------------
REDIS_PASSWORD=changeme

# ---------------------------------------------------------------------------
# Application secrets
# ---------------------------------------------------------------------------
# Must be at least 32 random characters in production.
SECRET_KEY=change-this-in-production-32-chars

# RS256 private key (PEM format, newlines replaced with \n) used to sign JWTs.
# See backend/.env.example for generation instructions.
JWT_PRIVATE_KEY=see-backend/.env.example

# ---------------------------------------------------------------------------
# Okta SSO / OIDC
# ---------------------------------------------------------------------------
OKTA_DOMAIN=your-okta-domain.okta.com
OKTA_CLIENT_ID=your-okta-client-id
OKTA_CLIENT_SECRET=your-okta-client-secret

# ---------------------------------------------------------------------------
# Observability
# ---------------------------------------------------------------------------
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# ---------------------------------------------------------------------------
# CORS
# ---------------------------------------------------------------------------
# Comma-separated list of allowed origins for the FastAPI CORS middleware.
CORS_ORIGINS=http://localhost:5173,http://localhost:80
